<UserControl x:Class="Tetris.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="800" d:DesignWidth="500">

	<Grid x:Name="LayoutRoot" Background="Black">
		<Canvas x:Name="mainCanvas" Grid.Row="0">
			<TextBlock Foreground="White" VerticalAlignment="Bottom" Canvas.Top="600" Canvas.Left="20" FontSize="15">Score</TextBlock>
			<TextBlock Foreground="White" x:Name="Score" VerticalAlignment="Bottom" Canvas.Top="620" Canvas.Left="20" FontSize="35">0</TextBlock>
			<TextBlock Foreground="White" VerticalAlignment="Bottom" Canvas.Top="600" Canvas.Left="220" FontSize="15">Difficulty</TextBlock>
			<TextBlock Foreground="White" x:Name="Difficulty" VerticalAlignment="Bottom" Canvas.Top="620" Canvas.Left="220" FontSize="35">0</TextBlock>
			<Canvas x:Name="nextShape" Canvas.Left="376" Canvas.Top="113"></Canvas>
		</Canvas>
	</Grid>
</UserControl>
